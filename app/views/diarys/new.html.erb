<div class='looking-back'>
  <div class='form'>
    <%= form_with model: @diary, local: true , url:'#'  do |f| %>
      
      <div class="click-up-lord">
        <p>今日の1枚</p>
          <%= f.file_field :image, id:"today-image" %>
      </div>

      <div class="today-title">
        <p>タイトル</p>
          <%= f.text_area :title, class:"title-text", id:"title" %>
      </div>

      <div class='today'>
        <p>今日の日付</p>
          <%= raw sprintf(
                      f.date_select(
                        :day,
                        class:'select-today',
                        id:"rite-day",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 2020,
                        end_year: (Time.now.year + 100),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>

        <div class="field" id="star">
            <%= f.label :rate,  "1日の充実度" ,id: "e"%>
            <%= f.hidden_field :rate, id: :review_star %>
        </div>
        <script>
            $('#star').raty({
                size     : 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                scoreName: 'comment[rate]',
            });
        </script>

      <div class='event-text'>
        <p>今日の出来事</p>
          <%= f.text_area :event, class:"today-event", id:"event"%>
      </div>

        <%= f.submit "日記を書く", class:'rite-btn'%>
    <% end %>
  </div>
